section.lab
  .flex.flex--center
    .col-50.flex--left
      .lab-wrap
        {% assign items = site.lab | sort: 'date' | reverse  %}
        {% for item in items limit: 8 %}
        a(href="{{ site.baseurl }}{{item.url}}" style="background-image: url({{ site.baseurl }} {{item.image_path}})").lab-thumb
          .lab-meta
            .name {{item.title}}
            .date {{item.date | date: " %b %d, %Y"}}
          {% endfor %}
          
    .col-1.flex.flex--left
